<h1>Pending pages</h1>

<%- paginated_section :class => "apple_pagination" do -%>
<table>
  <tr>
    <th>Name</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% for page in @pages %>
  <tr>
    <td><%=h page.name %></td>
    <td><%=h page.status %></td>
    <td><%= link_to 'Show', admin_page_path(:id => page, :page => page_param, :from => "pending") %></td>
    <td><%= link_to 'Edit', edit_admin_page_path(:id => page, :page => page_param, :from => "pending") %></td>
    <td><%= link_to 'Destroy', admin_page_path(:id => page, :page => page_param, :from => "pending"), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>
<%- end -%>

<p>
<%= link_to 'New page', new_admin_page_path(:page => page_param, :from => "pending") %>
</p>